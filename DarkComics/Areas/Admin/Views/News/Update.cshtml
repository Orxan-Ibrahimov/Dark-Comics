@model NewsViewModel
@{
    ViewData["Title"] = "Update News";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading page-title-icon-rounded">
            <div class="page-title-icon">
                <i class="pe-7s-id icon-gradient bg-tempting-azure font-weight-bolder">
                </i>
            </div>
            <div>
                <h1>Edit News</h1>
                <div class="page-title-subheading">
                    Wide selection of buttons that feature different styles for backgrounds, borders and hover options!
                </div>
            </div>
        </div>
    </div>
</div>

<div class="main-card mb-3 card">
    <div class="card-body">
        <h5 class="card-title">Bootstrap 4 Form Validation</h5>
        <form enctype="multipart/form-data" class="needs-validation" novalidate="" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="News.Id" />
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label asp-for="News.Title"></label>
                    <input asp-for="News.Title" class="form-control" placeholder="News Title" required>
                    <span asp-validation-for="News.Title"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="News.Blogger"></label>
                    <input asp-for="News.Blogger" class="form-control" placeholder="Who is Blogger ?" required>
                    <span asp-validation-for="News.Blogger"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="News.Photo">Profile</label>
                    <input asp-for="News.Photo" class="form-control" accept="image/*">
                    <img src="~/assets/img/news/news-@Model.News.Id/@Model.Image" width="200" height="200" alt="news" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ChosenCharacters"></label>
                    <select asp-for="ChosenCharacters" asp-items="@Model.CharacterList" class="form-control" multiple require>
                    </select>
                    <span asp-validation-for="ChosenCharacters"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ChosenTags"></label>
                    <select asp-for="ChosenTags" asp-items="@Model.TagList" class="form-control" multiple required>
                    </select>
                    <span asp-validation-for="ChosenTags"></span>
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="News.ShortDescription"></label>
                    <div class="toolbar-container"></div>
                    <textarea asp-for="News.ShortDescription" class="form-control"></textarea>
                    <span asp-validation-for="News.ShortDescription"></span>
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="News.Text"></label>
                    <div class="toolbar-container"></div>
                    <textarea asp-for="News.Text" class="form-control"></textarea>
                    <span asp-validation-for="News.Text"></span>
                </div>
            </div>

            <button class="btn btn-primary" asp-route-image="@Model.Image" type="submit">Submit form</button>
        </form>
    </div>
</div>


@section summernoteStyle{
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
}

@section summernote{

    <!-- include libraries(jQuery, bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!-- include summernote css/js -->
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#News_ShortDescription').summernote({
                placeholder: 'Hello stand alone ui',
                height: 250,
            });
        });

        $(document).ready(function () {
            $('#News_Text').summernote({
                placeholder: 'Hello stand alone ui',
                height: 250,
            });
        })
    </script>
}
