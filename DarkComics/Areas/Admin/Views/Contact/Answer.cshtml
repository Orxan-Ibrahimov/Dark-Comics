@model ContactViewModel
@{
    ViewData["Title"] = "Answer";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading page-title-icon-rounded">
            <div class="page-title-icon">
                <i class="pe-7s-id icon-gradient bg-tempting-azure font-weight-bolder">
                </i>
            </div>
            <div>
                <h1>Answer User</h1>
                <div class="page-title-subheading">
                    You can write user's email for answer
                </div>
            </div>
        </div>
    </div>
</div>

<div class="main-card mb-3 card">
    <div class="card-body">
        <h5 class="card-title">Bootstrap 4 Form Validation</h5>
        <form enctype="multipart/form-data" class="needs-validation" novalidate="" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-row">
                <div class="col-12 col-md-4 mb-3">
                    <label asp-for="Message.Email"></label>
                    <input asp-for="Message.Email" class="form-control">
                    <span asp-validation-for="Message.Email"></span>
                </div>

                <div class="col-12 col-md-4 offset-md-2 mb-3">
                    <label asp-for="Message.Subject"></label>
                    <input asp-for="Message.Subject" class="form-control" placeholder="Subject" required>
                    <span asp-validation-for="Message.Subject"></span>
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="Message.Message"></label>
                    <textarea asp-for="Message.Message" class="form-control" required></textarea>
                    <span asp-validation-for="Message.Message"></span>
                </div>

            </div>

            <button class="btn btn-primary" type="submit">Submit form</button>
        </form>
    </div>
</div>

@section summernoteStyle{
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
}

@section summernote{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#Message_Message').summernote({
                placeholder: 'Type here your answer',
                height: 250,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            }
            );
        });
    </script>
}
