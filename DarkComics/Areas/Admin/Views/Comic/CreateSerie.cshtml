@model ComicViewModel
@{
    ViewData["Title"] = "Create Comic";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading page-title-icon-rounded">
            <div class="page-title-icon">
                <i class="pe-7s-id icon-gradient bg-tempting-azure font-weight-bolder">
                </i>
            </div>
            <div>
                <h1>Add a New Serie</h1>
                <div class="page-title-subheading">
                    Wide selection of buttons that feature different styles for backgrounds, borders and hover options!
                </div>
            </div>
        </div>
    </div>
</div>

<div class="main-card mb-3 card">
    <div class="card-body">
        <h5 class="card-title">Bootstrap 4 Form Validation</h5>
        <form enctype="multipart/form-data" class="needs-validation" novalidate="" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Serie.Name"></label>
                    <input asp-for="Serie.Name" class="form-control" placeholder="Type here serie name" required>
                    <span asp-validation-for="Serie.Name"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Serie.Discount"></label>
                    <input asp-for="Serie.Discount" class="form-control" placeholder="Type here Discount percent" required>
                    <span asp-validation-for="Serie.Discount"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="Serie.CoverPhoto"></label>
                    <input asp-for="Serie.CoverPhoto" placeholder="Cover" class="form-control" accept="image/*" required>
                    <span asp-validation-for="Serie.CoverPhoto"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Serie.IsTeam">Team</label>
                    <select asp-for="Serie.IsTeam" class="form-control">
                        <option value="true">Team</option>
                        <option value="false">Personal</option>
                    </select>
                </div>

                <div class="col-md-3 mb-3">
                    <label asp-for="Serie.BackfacePhoto"></label>
                    <input asp-for="Serie.BackfacePhoto" placeholder="Backface" class="form-control" accept="image/*" required>
                    <span asp-validation-for="Serie.BackfacePhoto"></span>
                </div>


            </div>

            <button class="btn btn-primary" type="submit">Submit form</button>
        </form>
    </div>
</div>


@section summernoteStyle{
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
}

@section summernote{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#Character_AboutCharacter').summernote({
                placeholder: 'Hello stand alone ui',
                height: 250,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            }
            );
        });
    </script>
}
