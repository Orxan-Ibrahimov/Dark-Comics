@model ComicViewModel
@{
    ViewData["Title"] = "ComicIndex";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading page-title-icon-rounded">
            <div class="page-title-icon">
                <i class="pe-7s-id icon-gradient bg-tempting-azure font-weight-bolder">
                </i>
            </div>
            <div>
                <h1>Comics</h1>
                <div class="page-title-subheading">
                    Wide selection of buttons that feature different styles for backgrounds, borders and hover options!
                </div>
            </div>
        </div>
    </div>
</div>

<!-- featured section starts  -->
<section class="featured" id="featured">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center">
                    <a asp-action="CreateComic" asp-route-id="@Model.Serie.Id" class="mb-2 mr-2 btn btn-outline-success"><i class="pe-7s-news-paper pe-lg"></i></a>
                </h3>
            </div>
            <div class="col-12">
                <h1 class="heading"> <span>featured books</span> </h1>
                <div class="swiper featured-slider">
                    <div class="swiper-wrapper">
                        @foreach (var comic in Model.RandomComics)
                        {
                            <div class="swiper-slide box">
                                <div class="icons">
                                    <a asp-controller="Comic" asp-action="ComicDetail" asp-route-id="@comic.Id" class="pe-7s-look pe-lg"></a>
                                    <a asp-controller="Comic" asp-action="UpdateComic" asp-route-id="@comic.Id" class="pe-7s-pen pe-lg"></a>
                                    <a asp-controller="Comic" asp-action="MakeActiveOrDeactive" asp-route-id="@comic.Id" class="@(comic.IsActive?"pe-7s-close-circle buton-outline-danger":"pe-7s-refresh-2")"></a>
                                </div>
                                <div class="image">
                                    <img src="~/assets/img/product-@comic.Id/@comic.Image" alt="product" />
                                </div>
                                <div class="content">
                                    <h3>@comic.Name</h3>
                                    <div class="price">$@(comic.Price - (comic.Price * comic.ComicDetail.Serie.Discount/100))<span> @((comic.ComicDetail.Serie.Discount != 0)? $"{@comic.Price}" : null)</span></div>
                                </div>
                            </div>
                        }

                    </div>

                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>

                </div>
            </div>
        </div>
    </div>

</section>
<!-- featured section ends -->
