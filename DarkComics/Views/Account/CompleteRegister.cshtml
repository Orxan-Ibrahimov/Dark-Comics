@model SecurityCodeVM
@{
    ViewData["Title"] = "CompleteRegister";
}

<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center">
                <div class="login">
                    <div class="login-form-container">                       
                        <div class="login-form">
                            <form method="post" asp-action="CompleteRegister">
                                <div asp-validation-summary="ModelOnly" class="alert text-danger"></div>
                                <div class="form-group my-4">
                                    <label asp-for="Code"></label>
                                    <input asp-for="Code" class="form-control my-2" placeholder="Type here current password" required>
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary submit-btn btn-block">Send</button>                            
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>>
<!-- Register end -->
