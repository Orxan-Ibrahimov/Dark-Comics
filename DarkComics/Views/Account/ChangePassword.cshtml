@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}


<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Change Password</h2>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                
                                <div asp-validation-summary="ModelOnly" class="alert text-danger"></div>

                                <div class="form-group my-4">
                                    <label asp-for="OldPassword"></label>
                                    <input asp-for="OldPassword" class="form-control my-2" placeholder="Type here current password" required>
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group my-4">
                                    <label asp-for="NewPassword"></label>
                                    <input asp-for="NewPassword" class="form-control my-2" placeholder="Type here new password" required>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group my-4">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword" class="form-control my-2" placeholder="Type here confirm password" required>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary submit-btn btn-block">Change Password</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>>
<!-- Register end -->
