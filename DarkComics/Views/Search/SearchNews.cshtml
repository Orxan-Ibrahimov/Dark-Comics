@model PaginationViewModel<TagNews>


<section id="biography" class="bg-dark py-5 my-0">
    <div class="container-fluid">
        <div class="row py-5">
            <div class="col-12">
                <h1 class="text-white">News</h1>
            </div>
            <div class="col-12">
                <div class="row">
                    @foreach (var tagNews in Model.Products)
                    {
                        <div class="col-12 col-md-6 col-lg-4 my-5">
                            <div class="news-card rounded">
                                <div class="image-box">
                                    <img src="~/assets/img/news/news-@tagNews.News.Id/@tagNews.News.Image" class="w-100 h-100 rounded" alt="">
                                    <div class="date">
                                        <h2 class="text-white">@tagNews.News.CreatedDate.GetValueOrDefault().ToString("MMM dd")</h2>
                                    </div>
                                </div>
                                <div class="content">
                                    <h2>@tagNews.News.Title</h2>
                                    <div class="my-3">
                                        @Html.Raw(tagNews.News.ShortDescription)
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <a class="comment mx-1" href=""><i class="far fa-comment"> 8</i></a>
                                            <a class="like mx-1" href=""><i class="far fa-heart"></i> 5</a>
                                        </div>
                                        <a asp-controller="News" asp-action="Details" asp-route-id="@tagNews.News.Id" class="news-card__btn">Go Detail...</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row my-5">
                    <div class="col-12">
                        <nav class="" aria-label="Page navigation example">
                            @Html.Raw(@Model.Getpagination(Url, "SearchNews"))
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>