@model PaginationViewModel<ProductCharacter>
@{
    ViewData["Title"] = "Search";
}
<section>
    <div class="container">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="volume my-5">
                        <a href="#" class="volume__body">
                            @*<img src="~/assets/img/product-@product.Product.Id/@product.Product.Image" class="w-100 h-100" alt="volume" />*@
                            <img src="~/assets/img/product-@product.Product.Id/@product.Product.Image" class="w-100 h-100" alt="cover" />
                            <img src="~/assets/img/product-@product.Product.Id/@product.Product.ComicDetail.Backface" class="w-100 h-100" alt="backface" />
                        </a>
                        <div class="volume__footer">
                            <h5 class="text-center fw-bold my-3">@product.Product.Name</h5>
                            <a href="" class="volume__btn">Go Volume</a>
                        </div>
                    </div>
                </div>
            }       
        </div>
        <div class="row">
            <div class="col-12">
                <nav class="" aria-label="Page navigation example">
                    @Html.Raw(@Model.Getpagination(Url, "Search"))                   
                </nav>
            </div>
        </div>
    </div>
</section>