@model SearchViewModel
@{
    ViewData["Title"] = "Default";
    Layout = null;
}
<div class="col-6 offset-1 d-none d-md-block">
    <form method="post">
        <div class="form-group position-relative d-flex justify-content-end align-items-center">
            <input type="search" asp-for="Name" placeholder="Type here" class="form-control" />
            <button type="submit" asp-controller="Search" asp-action="Search" class="position-absolute px-3 h-100 border-0 rounded bg-info"><i class="fas fa-search"></i></button>
        </div>
    </form>
</div>