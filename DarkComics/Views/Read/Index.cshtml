@model ReadComicViewModel
@{
    ViewData["Title"] = "Index";
}

<!-- home section starts -->
<section class="home" id="home">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6">
                <div class="content">
                    <h3>upto 75% off</h3>
                    <p>
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Magnam deserunt nostrum
                        accusamus. Nam
                        alias sit necessitatibus, aliquid ex minima at!
                    </p>
                    <a href="#" class="btn">shop now</a>
                </div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="swiper books-slider">
                    <div class="swiper-wrapper">
                        @foreach (var comic in Model.Comics)
                        {
                            <a asp-action="Read" asp-route-id="@comic.Id" class="swiper-slide my-4">
                                <img src="~/assets/img/products/@comic.Image" alt="@comic.Image" />
                            </a>
                        }
                    </div>
                    <img src="~/assets/img/stand.png" class="stand" alt="">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- home section end -->  