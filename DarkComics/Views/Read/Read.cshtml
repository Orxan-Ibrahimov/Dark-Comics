@model ReadComicViewModel
@{
    ViewData["Title"] = "Read";
}

<!-- Reading Comic Section Start -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 heading">
                <h1 class="text-center">Read</h1>
            </div>
        </div>
        @foreach (var readingComic in Model.Comic.ComicDetail.ReadingComics)
        {
        <div class="row">
            <div class="col-6 offset-3">
                <img src="~/assets/img/readingComics/@Model.Comic.Name.Replace("#","").Replace(" ","")/@readingComic.Image"
                     class="w-100" alt="@readingComic.Image" />
            </div>
        </div>
        }
        <h1 class="text-center text-capitalize">The end</h1>

    </div>
    
</section>
<!--  Reading Comic Section End -->
