@model ReadViewModel
@{
    ViewData["Title"] = "Read";
}

<!-- Reading Comic Section Start -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 heading">
                <h1 class="text-center">Read</h1>
            </div>
        </div>
        @foreach (var readingComic in Model.ComicDetail.ReadingComics)
        {
        <div class="row">
            <div class="col-6 offset-3">
                <img src="~/assets/img/comics/@Model.ComicDetail.Serie.Name.ToLower().Replace(" ","-")/@Model.ComicDetail.Serie.Id/@readingComic.Image"
                     class="w-100" alt="@readingComic.Image" />
            </div>
        </div>
        }

    </div>
    
</section>
<!--  Reading Comic Section End -->
